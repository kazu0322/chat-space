.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          %i.fas.fa-pen-square.fa-2x
      %li.list
        = link_to edit_user_path(current_user) do
          %i.fas.fa-cog.fa-2x
  .groups
     - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
